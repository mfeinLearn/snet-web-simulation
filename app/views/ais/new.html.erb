<h1>Create an Ai!</h1>
<%= render partial: 'layouts/errors', locals: {object: @ai} %>

<%= form_for(@ai) do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :balance %>
<%= f.number_field :balance, min:0 %>

<p> Select a Service that already exists: </p>
<div>
  <%#= f.collection_select :service_id, Service.all, :id, :name, include_blank: 'Select One'%>
</div>

<p> Or create a new Service: </p>
  <div>
    <%= f.fields_for :services do |serv| %>

      <%= serv.label :name %>
      <%= serv.text_field :name %><br>

      <%= serv.label :description %>
      <%= serv.text_field :description %><br>

      <%= serv.label :price %>
      <%= serv.number_field :price %><br>
    <% end %>
  </div>
  <br>
<%= f.submit %>
<% end %>
